<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/import_file"
        android:id="@+id/imexport_label_imexport_from"
        android:layout_above="@+id/imexport_from"
        android:layout_alignLeft="@+id/imexport_imexport"
        android:layout_centerHorizontal="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose"
        android:id="@+id/imexport_choose"
        android:layout_above="@+id/imexport_label_imexport_password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imexport_from"
        android:layout_above="@+id/imexport_label_imexport_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imexport_choose"
        android:layout_toLeftOf="@+id/imexport_choose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/import_file_password"
        android:id="@+id/imexport_label_imexport_password"
        android:layout_above="@+id/imexport_use_my_password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/imexport_password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_my_password"
        android:id="@+id/imexport_use_my_password"
        android:checked="true"
        android:layout_above="@+id/imexport_password"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_"
        android:id="@+id/imexport_imexport"
        android:layout_below="@+id/imexport_password"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/imexport_cancel"
        android:layout_below="@+id/imexport_imexport"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
